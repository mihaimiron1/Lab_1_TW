@{
    ViewBag.Title = "Index";
}

<style>
    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh; 
    }

    .custom-button {
        background-color: #d4edda; 
        color: #155724; 
        font-size: 20px;
        padding: 15px 40px;
        margin: 10px;
        border: 2px solid #c3e6cb; 
        border-radius: 8px; 
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); 
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        font-weight: bold;
    }

        .custom-button:hover {
            background-color: #c3e6cb; 
            transform: scale(1.05); 
        }
</style>

<div class="button-container">
    <a href="@Url.Action("Index", "Home")" class="custom-button">Your info</a>
    <a href="@Url.Action("InfoCard", "Home")" class="custom-button">Info Card</a>
    <a href="@Url.Action("AboutUs", "Home")" class="custom-button">About Us</a>
</div>
