@{
    ViewBag.Title = "p2p";
}
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMC Bank</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden; /* Ascunde scroll-ul orizontal */
            font-family: 'Kantumruy Pro', sans-serif;
            background: linear-gradient(180deg, white 62%, #0C9CA7 91%); /* Fundalul se aplică pe întreaga pagină */
        }

        .container {
            width: 100%;
            min-height: 120vh; /* Extindem înălțimea containerului */
            position: relative;
            background: transparent; /* Containerul este transparent, fundalul este gestionat de body */
        }

        /* Restul stilurilor rămân neschimbate */
        .logo {
            position: absolute;
            left: 2%;
            top: 2%;
            font-size: 3rem;
            font-weight: 700;
            color: #163B3D;
        }

        .logo-italic {
            font-style: italic;
        }

        .search-icon {
            position: absolute;
            right: 5%;
            top: 10%;
            cursor: pointer;
        }

        .button {
            position: absolute;
            background: rgba(217, 217, 217, 0);
            border-radius: 19px;
            border: 2px #1E4445 solid;
            color: #0B9CA6;
            font-size: 1rem;
            font-weight: 700;
            padding: 0.5rem 1rem;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }

            .button:hover {
                background-color: #1E4445;
                color: white;
            }

        .network-button {
            right: 10%;
            top: 2%;
        }

        .login-button {
            right: 3%;
            top: 2%;
        }

        .menu {
            position: absolute;
            width: 100%;
            top: 10%;
            background: linear-gradient(90deg, #163B3D 69%, #8EBFBD 95%);
            padding: 1rem 0;
        }

        .menu-items {
            display: flex;
            justify-content: space-around;
            color: white;
            font-size: 1rem;
            font-weight: 400;
        }

            .menu-items span {
                cursor: pointer;
                transition: color 0.3s;
            }

                .menu-items span:hover {
                    color: #0B9CA6;
                }

        /* Stiluri pentru transfer rapid */
        .transfer-section {
            position: absolute;
            top: 20vh;
            left: 5%;
            width: 90%;
            text-align: center;
            margin-bottom: 150px; /* Added margin for spacing */
        }
        .transfer-button:disabled {
            background: #cccccc;
            cursor: not-allowed;
            box-shadow: none;
        }

        .transfer-title {
            font-size: 2rem;
            color: #163B3D;
            margin-bottom: 2rem;
        }

        .cards-container {
            display: flex;
            justify-content: space-between; /* Cardurile sunt mai în părți */
            align-items: flex-start; /* Aliniere la începutul cardurilor */
            gap: 2rem;
        }

        .card-section {
            width: 45%; /* Lățimea cardurilor în procente */
            max-width: 500px; /* Lățime maximă */
            display: flex;
            flex-direction: column;
            align-items: flex-start; /* Aliniere la stânga */
        }

        .card-image img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .card-details {
            width: 100%; /* Inputurile vor fi la fel de late ca cardurile */
        }

            .card-details h2 {
                color: #163B3D;
                font-size: 1.2rem; /* Text mai mic */
                margin-bottom: 1rem;
                text-align: left; /* Aliniere la stânga */
            }

        .input-group {
            margin-bottom: 1rem;
            text-align: left;
        }

            .input-group label {
                display: block;
                color: #6D9C9A;
                font-size: 0.9rem;
                margin-bottom: 0.5rem;
            }

            .input-group input {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 8px;
                font-size: 1rem;
                color: #163B3D;
                background: #e0e0e0; /* Culoare gri mai închisă */
            }

                .input-group input:focus {
                    outline: none;
                    background: #d0d0d0; /* Culoare gri mai închisă la focus */
                }

        .transfer-arrow {
            font-size: 2rem;
            color: #163B3D;
            margin: 0 1rem;
            align-self: center; /* Centrare verticală */
        }

        .amount-section {
            margin-top: 2rem;
            text-align: center;
        }

            .amount-section .input-group {
                max-width: 300px;
                margin: 0 auto 1.5rem;
            }

        .transfer-button {
            background: #0B9CA6;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Umbra pentru evidențiere */
        }

            .transfer-button:hover {
                background: #1E4445;
                box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15); /* Umbra mai pronunțată la hover */
            }

        /* Stiluri pentru fereastra plutitoare */
        .floating-window {
            position: fixed;
            right: 20px;
            bottom: 20px;
            background: #163B3D;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.8rem;
            cursor: pointer;
            transition: background-color 0.3s;
            z-index: 1000;
        }

            .floating-window:hover {
                background-color: #0B9CA6;
            }

                .floating-window:hover::after {
                    content: "Salut, cu ce te putem ajuta?";
                    position: absolute;
                    right: 70px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: #163B3D;
                    color: white;
                    padding: 10px;
                    border-radius: 5px;
                    font-size: 14px;
                    white-space: nowrap;
                }

            .floating-window span {
                text-align: center;
                line-height: 1.2;
            }

                .floating-window span:first-child {
                    font-weight: bold;
                }

                .floating-window span:last-child {
                    color: #93D5E0; /* Culoarea pentru "suport" */
                    font-size: 0.7rem;
                }

        /* Stiluri pentru fereastra pop-up */
        .popup {
            display: none;
            position: fixed;
            right: 20px;
            bottom: 90px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            width: 250px;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            z-index: 1000;
            text-align: center;
        }

            .popup h3 {
                margin: 0 0 10px;
                font-size: 18px;
                color: #163B3D;
            }

            .popup p {
                margin: 0;
                font-size: 14px;
                color: #455B5D;
            }

            .popup textarea {
                width: 100%;
                height: 80px;
                margin-top: 10px;
                padding: 0px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 14px;
                resize: none;
            }

            .popup button {
                margin-top: 10px;
                padding: 5px 10px;
                background: #05FFB9;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .popup button:hover {
                    background-color: #00e6a8;
                }

            .popup .confirmation-message {
                display: none;
                margin-top: 10px;
                font-size: 14px;
                color: #163B3D;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <span>AMC</span>
            <span class="logo-italic">bank</span>
        </div>
        <div class="search-icon" onclick="alert('Căutare activată!')">
            <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M24 24L16.5 16.5M1 10C1 14.9706 5.02944 19 10 19C14.9706 19 19 14.9706 19 10C19 5.02944 14.9706 1 10 1C5.02944 1 1 5.02944 1 10Z" stroke="#455B5D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>
        <div class="button network-button" onclick="alert('Rețea unități deschisă!')">Despre noi</div>
        <div class="button login-button" onclick="alert('Logare deschisă!')">Logare</div>

        <!-- Secțiunea de transfer rapid de la card la card -->
        <div class="transfer-section">
            <div class="transfer-title">Transfer rapid de la card la card</div>
            <div class="cards-container">
                <!-- Cardul expeditorului -->
                <div class="card-section">
                    <h2>Expeditor</h2>
                    <div class="card-image">
                        <img src="~/Content/Images/transfer/AMC_black_card.png" alt="Card Expeditor">
                    </div>
                    <div class="card-details">




                        <div class="input-group">
                            <label for="expeditor-card">Număr card expeditor</label>
                            <input type="text" id="expeditor-card" placeholder="0000 0000 0000 0000" required
                               pattern="\d{4}\s\d{4}\s\d{4}\s\d{4}"
                               title="Introdu 16 cifre cu spații după fiecare 4 cifre">
                        </div>


                        <div class="input-group">
                            <label for="expeditor-name">Prenume Nume</label>
                            <input type="text" id="expeditor-name" placeholder="Introdu prenumele și numele">
                        </div>



                        <div class="input-group">
                            <label for="expeditor-validity">Perioada de valabilitate</label>
                            <input type="text" id="expeditor-validity" placeholder="MM/YY" required
                                   pattern="\d{2}\/\d{2}"
                                   title="Introdu luna și anul în format MM/YY">
                        </div>







                    </div>
                </div>

                <!-- Săgeata între carduri -->
                <div class="transfer-arrow">➔</div>

                <!-- Cardul beneficiarului -->
                <div class="card-section">
                    <h2>Beneficiar</h2>
                    <div class="card-image">
                        <img src="~/Content/Images/transfer/AMC_black_card.png" alt="Card Expeditor">
                    </div>
                    <div class="card-details">


                        <div class="input-group">
                            <label for="beneficiar-card">Număr card beneficiar</label>
                            <input type="text" id="beneficiar-card" placeholder="0000 0000 0000 0000" required
                                   pattern="\d{4}\s\d{4}\s\d{4}\s\d{4}"
                                   title="Introdu 16 cifre cu spații după fiecare 4 cifre">
                        </div>



                        <div class="input-group">
                            <label for="beneficiar-name">Prenume Nume</label>
                            <input type="text" id="beneficiar-name" placeholder="Introdu prenumele și numele">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sectiunea sumei -->
            <div class="amount-section">
                <div class="input-group">
                    <label for="amount">Sumă (MDL)</label>
                    <input type="number" id="amount" placeholder="Introdu suma">
                </div>
                <button class="transfer-button" id="transferButton" disabled>Transferă acum</button>
            </div>
        </div>

        <div class="menu">
            <div class="menu-items">
                <span onclick="alert('Credite selectate!')">credite</span>
                <span onclick="alert('Depozite selectate!')">depozite</span>
                <span onclick="alert('Carduri selectate!')">carduri</span>
                <span onclick="alert('Depozite selectate!')">depozite</span>
                <span onclick="alert('Obligațiuni selectate!')">obligațiuni</span>
                <span onclick="alert('Plăți și transferuri selectate!')">plăți și transferuri</span>
                <span onclick="alert('Curs valutar selectat!')">curs valutar</span>
                <span onclick="alert('Caritate selectată!')">caritate</span>
                <span onclick="alert('Mai multe selectate!')">mai multe</span>
            </div>
        </div>

        <!-- Fereastra plutitoare -->
        <div class="floating-window" onclick="togglePopup(event)">
            <span>AMC</span>
            <span>suport</span>
        </div>

        <!-- Fereastra pop-up -->
        <div class="popup" id="popup">
            <h3>Ajutor și suport</h3>
            <p>Cu ce te putem ajuta astăzi?</p>
            <textarea placeholder="Scrie mesajul tău aici..."></textarea>
            <button onclick="sendMessage()">Trimite</button>
            <div class="confirmation-message" id="confirmationMessage">
                Mulțumim pentru mesaj! Echipa noastră vă va reveni în cel mai scurt timp.
            </div>
        </div>
    </div>

    <script>
        // Card Number Formatting
        function formatCardNumber(input) {
            let value = input.value.replace(/\D/g, '').substring(0,16);
            let formatted = value.match(/.{1,4}/g);
            input.value = formatted ? formatted.join(' ') : '';
        }

        // Expiry Date Formatting
        function formatExpiryDate(input) {
            let value = input.value.replace(/\D/g, '').substring(0,4);
            if(value.length >= 2) {
                input.value = value.slice(0,2) + '/' + value.slice(2,4);
            } else {
                input.value = value;
            }
        }

        // Input Validation
        function validateForm() {
            const inputs = document.querySelectorAll('input[required]');
            const amount = document.getElementById('amount');
            const button = document.getElementById('transferButton');
            
            let isValid = true;
            inputs.forEach(input => {
                if(!input.checkValidity()) isValid = false;
            });
            
            if(!amount.value || isNaN(amount.value) || amount.value <= 0) isValid = false;
            
            button.disabled = !isValid;
        }

        // Event Listeners
        document.getElementById('expeditor-card').addEventListener('input', function(e) {
            formatCardNumber(e.target);
            validateForm();
        });

        document.getElementById('beneficiar-card').addEventListener('input', function(e) {
            formatCardNumber(e.target);
            validateForm();
        });

        document.getElementById('expeditor-validity').addEventListener('input', function(e) {
            formatExpiryDate(e.target);
            validateForm();
        });

        // Add validation for all inputs
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', validateForm);
        });

        // Transfer Button Handler
        document.getElementById('transferButton').addEventListener('click', function(e) {
            if(!this.disabled) {
                e.preventDefault();
                alert('Transfer inițiat!');
                // Add actual transfer logic here
            }
        });
















        function togglePopup(event) {
            event.stopPropagation(); // Previne închiderea imediată a pop-up-ului
            var popup = document.getElementById("popup");
            var confirmationMessage = document.getElementById("confirmationMessage");
            if (popup.style.display === "block") {
                popup.style.display = "none";
            } else {
                popup.style.display = "block";
                confirmationMessage.style.display = "none"; // Ascunde mesajul de confirmare când pop-up-ul este deschis din nou
            }
        }

        function sendMessage() {
            var textarea = document.querySelector('.popup textarea');
            var message = textarea.value;
            if (message.trim() !== "") {
                var confirmationMessage = document.getElementById("confirmationMessage");
                confirmationMessage.style.display = "block";
                textarea.value = ""; // Golește câmpul de text după trimitere
            } else {
                alert("Te rugăm să scrii un mesaj înainte de a trimite.");
            }
        }

        // Închide pop-up-ul când se face click în afara lui
        document.addEventListener('click', function (event) {
            var popup = document.getElementById("popup");
            var floatingWindow = document.querySelector('.floating-window');
            if (popup.style.display === "block" && !popup.contains(event.target) && !floatingWindow.contains(event.target)) {
                popup.style.display = "none";
            }
        });
    </script>
</body>
</html>